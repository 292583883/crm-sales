<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<context:component-scan base-package="org.xujin.halo" /><!-- Scan SOFA framework-->
    <context:component-scan base-package="org.xujin.crm.sales" /><!-- Scan Application-->


	<bean id="bootstrap" class="org.xujin.halo.boot.Bootstrap" init-method="init">
		<property name="packages">
			<list>
				<value>org.xujin.crm.sales</value>
			</list>
		</property>
	</bean>

	<import resource="spring-infrastructure.xml"/>
</beans>